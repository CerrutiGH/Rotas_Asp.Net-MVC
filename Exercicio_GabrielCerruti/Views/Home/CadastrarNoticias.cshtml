@model Exercicio_GabrielCerruti.Models.Noticias

@{
    ViewBag.Title = "Cadastrar Noticias";
}

<style>
    .ColorActionLink {
        color: black;
    }

        .ColorActionLink:hover {
            color: #60b2e3;
            text-decoration: none
        }

    .label {
        color: #2e2f30;
    }

    .label-info {
        background-color: #d9edf7;
    }
</style>
<br />
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title" style="color:black;"><b>Adicionar Notícias</b></h3>

    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.TITULO_NOTICIA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TITULO_NOTICIA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TITULO_NOTICIA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CATEGORIA_NOTICIA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CATEGORIA_NOTICIA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CATEGORIA_NOTICIA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DESCRICAO_NOTICIA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DESCRICAO_NOTICIA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DESCRICAO_NOTICIA, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DATA_NOTICIA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DATA_NOTICIA, new { htmlAttributes = new { @class = "form-control", @type = "date", @placeholder = "01/01/0001", @min = "1950-01-01" } })
                    @Html.ValidationMessageFor(model => model.DATA_NOTICIA, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <a class="control-label col-md-2"></a>
                <div class="col-md-10">
                    <button type="submit" class="btn btn-default ">Adicionar</button>
                </div>
            </div>
        </div>


        <br />

    }
</div>
